@import '/assets/css/icons.wxss';


/*首页轮播*/
.home-swiper{
  width:750rpx;
  height:450rpx;
}
.home-swiper-img{
  width:100%;
  height:100%;
}
/*导航*/
.nav-container{
  display:flex;
  justify-content: space-around;
}
.nav-list{
  display:flex;
  flex:1;
  flex-direction: column;
}
.nav-list .nav{
  margin: 10px auto 5px;
}
.nav-list .nav-img{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
}
.nav-title{
  font-size:14px;
  text-align: center;
  padding-bottom:20rpx;
}
/*导航列表*/
.navigation{
  display: flex;
  height:120rpx;
  line-height: 120rpx;
  padding-left:20rpx;
  font-size:14px;
}
.navigation-text{
  flex:1;
  margin-left:10px;
}
/*字体样式配置*/
.icon-daohang, .icon-tongzhi, .icon-tuijian{
  display:inline-block;
  font-size:22px;
  color:#32A1FE;
  font-weight:bold;
  padding-top:2px;
}
.icon-huanyihuan{
  font-size:28px;
}
.icon-jiantou{
  color:#333;
  margin-right:10px;
}
/*换一批*/
.job{
  display: flex;
  height:120rpx;
  line-height: 120rpx;
  padding-left:20rpx;
  font-size:14px;
  border-bottom:1px solid #ddd;
}
.change{
  display:flex;
}
.change-text{
  padding-right:10px;
}
/**/
.job-container{
  display:flex;
  justify-content: space-around;
  flex-wrap: nowrap;
}
.job-container .job-desc{
  flex:1;
  padding:20rpx;
  background:#E1FFFD;
  font-size:14px;
  line-height:2;
  border-radius:10rpx;
}
.job-desc{
  margin:20rpx;
}
.job-award{
  padding:10rpx;
  border:1px solid #FFC87D;
  background: #FFF9D5;
  border-radius: 10rpx;
  margin-right:20rpx;
  margin-left:-6rpx;
}
.job-price{
  padding:5px;
}
/*类型筛选*/
.type-container{
  display:flex;
  justify-content: space-around;
  padding:10px;
  font-size:14px;
}
.type-nav{
  padding:5px;
  width:60px;
  text-align: center;
  background: #eee;
  border-radius:5px;
  position: relative;
  overflow: hidden;
}
.type-nav:after{
  content:"";
  width:10px;
  height:10px;
  background: #32A1FE;
  position: absolute;
  transform: rotate(45deg);
  top:-5px;
  left:50%;
  margin-left:-5px;
}
.type-nav.active{
  color:#32A1FE;
  border:1px solid #32A1FE;
}


